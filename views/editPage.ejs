<!-- userForm.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Management System</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f2f2f2;
    }
  
    nav {
      background-color: #333;
      color: white;
      padding: 10px 0;
    }

    .container {
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
    }

    .logo {
      font-size: 24px;
    }

    form {
      background-color: #fff;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .message {
      background-color: #4CAF50;
      color: white;
      padding: 10px;
      margin: 20px auto;
      max-width: 400px;
      border-radius: 5px;
      text-align: center;
    }

    .button {
      display: inline-block;
      padding: 10px 20px;
      background-color: #333;
      color: white;
      text-decoration: none;
      border-radius: 5px;
    }

    .button:hover {
      background-color: #555;
    }

    label {
      display: block;
      margin-bottom: 10px;
      font-weight: bold;
    }

    .goBack {
      padding: 10px 20px;
      border: none;
      background-color: #4CAF50;
      color: white;
      border-radius: 5px;
      cursor: pointer;
      margin-bottom: 20px;
      display: block;
      width: 100%;
      max-width: 200px;
      margin: auto;
      margin-top: 10px;
    }

    input[type="text"],
    input[type="email"],
    textarea,
    select {
      width: 100%;
      padding: 8px;
      border: 1px solid #ccc;
      border-radius: 5px;
      margin-bottom: 15px;
      box-sizing: border-box;
    }

    textarea {
      height: 100px;
    }

    input[type="submit"] {
      padding: 10px 20px;
      border: none;
      background-color: #4CAF50;
      color: white;
      border-radius: 5px;
      cursor: pointer;
    }

    input[type="submit"]:hover {
      background-color: #45a049;
    }

    @media screen and (max-width: 600px) {
      .container {
        padding: 10px;
      }

      .logo {
        font-size: 20px;
      }

      input[type="text"],
      input[type="email"],
      textarea,
      select {
        width: calc(100% - 20px);
      }
    }
  </style>
</head>
<body>
  <nav>
    <div class="container">
      <div class="logo">User Management System</div>
      
    </div>
  </nav>

  <button class="goBack" onclick="window.location.href='/'">Go Back</button>

  <div class="container">
    <% if (locals.message) { %>
      <div class="message">
        <%= message %>
      </div>
    <% } %>

    
    <form action="/updateData/<%= locals.rowsman[0].id %>"  method="post">
        <label for="firstName">First Name:</label>
        <input type="text" id="firstName" name="firstName" value="<%= locals.rowsman[0].first_name %>" required>
  
        <label for="lastName">Last Name:</label>
        <input type="text" id="lastName" name="lastName" value="<%= locals.rowsman[0].last_name %>" required>
  
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" value="<%= locals.rowsman[0].email %>" required>
  
        <label for="phone">Phone:</label>
        <input type="text" id="phone" name="phone" value="<%= locals.rowsman[0].phone %>" required>
  
        <label for="comments">Comments:</label>
        <textarea id="comments" name="comments"><%= locals.rowsman[0].comments %></textarea>
  
        <label for="status">Status:</label>
        <select id="status" name="statuus">
          <option value="active" <% if (locals.rowsman[0].status === 'active') { %>selected<% } %>>Active</option>
          <option value="inactive" <% if (locals.rowsman[0].status === 'inactive') { %>selected<% } %>>Inactive</option>
        </select>
  
        <input type="submit" value="Submit">
      </form>
  </div>
</body>
</html>
